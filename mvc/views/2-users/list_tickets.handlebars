<div class="row hidden-mobile">
	<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
		<h1 class="page-title txt-color-blueDark">
			<i class="fa-fw fa fa-puzzle-piece"></i> 
			Tickets <span>>
			{{tkts.[0].store_id.company_id.companyName}} </span></h1>
	</div>
</div>	
				<!-- widget grid -->
				<section id="widget-grid" class="">

					<!-- row -->
					<div class="row">
						
						<!-- NEW WIDGET START -->
						<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
							
							<!-- Widget ID (each widget will need unique ID)-->
							<div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false">
								<header>
									<span class="widget-icon"> <i class="fa fa-table"></i> </span>
									<h2>Ver tickets </h2>

								</header>

								<!-- widget div-->
								<div>

									<!-- widget edit box -->
									<div class="jarviswidget-editbox">
										<!-- This area used as dropdown edit box -->

									</div>
									<!-- end widget edit box -->

									<!-- widget content -->
									<div class="widget-body no-padding">

										<table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
					
									        <thead>
												<tr>
													<th class="hasinput" style="width:10%">
														<input type="text" class="form-control" placeholder="Ticket No." />
													</th>
													<th class="hasinput" style="width:20%">
														<input type="text" class="form-control" placeholder="Titulo" />
													</th>
													<th class="hasinput" style="width:15%">
														<input type="text" class="form-control" placeholder="Ciudad" />
													</th>
													<th class="hasinput" style="width:15%">
														<input type="text" class="form-control" placeholder="Tienda" />
													</th>
<!--													<th class="hasinput" style="width:15%">
														<input type="text" class="form-control" placeholder="Tienda" />
													</th>-->
													<th class="hasinput" style="padding-bottom: 0px">
														<input id="dateselect_filter" type="text" placeholder="Creación" class="form-control datepicker" data-dateformat="yy/mm/dd">
														<label for="dateselect_filter"  rel="tooltip" title="" data-original-title="Purchase Date"></label>
													</th>																																					
													<th class="hasinput" style="padding-bottom: 0px">
														<input id="dateselect_filter2" type="text" placeholder="Modificación" class="form-control datepicker" data-dateformat="yy/mm/dd">
														<label for="dateselect_filter2" rel="tooltip" title="" data-original-title="Purchase Date"></label>
													</th>
													<th class="hasinput" style="width:10%">
														<input type="text" class="form-control" placeholder="Estado" />
													</th>													
												</tr>
									            <tr>
								                    <th data-class="expand">Ticket No.</th>
								                    <th data-hide="phone,tablet">Titulo</th>
								                    <th >Ciudad</th>
								                    <th data-hide="phone,tablet">Tienda</th>
								                    <th data-hide="phone,tablet">Creado:</th>								                    
								                    <th >Actualizado:</th>
								                    <th >Estado</th>
									            </tr>
									        </thead>

											<tbody>
												{{#each tkts}}
												<tr>
													<td align="center">{{ticketNumber}}</td>
													<td align="center">{{title}}</td>
													<td align="center">{{store_id.city_id.city}}</td>
													<td align="center">{{store_id.storeName}}</td>
													<td align="center">{{formatDate startdate "YYYY/MM/DD"}}</td>
													<td align="center">{{formatDate lastupdate "YYYY/MM/DD"}}</td>
													<td><button class="btn {{statusTag status}} center-block padding-5 label view-ticket" data-toggle="modal" 
														data-target="#TicketInfoModal"
														data-id ="{{id}}"
														data-number = "{{ticketNumber}}"
														data-title = "{{title}}"
														data-description = "{{description}}"
														data-store = "{{store_id.storeName}}"
														data-city = "{{store_id.city_id.city}}"
														data-status = "{{status}}"
														data-openning = "{{formatDate startdate "DD/MM/YYYY hh:mm"}}"
														data-lastupdate = "{{formatDate lastupdate "DD/MM/YYYY hh:mm"}}"
													>
														{{status}}
													</button></td>
												</tr>
												{{/each}}
											</tbody>
																
										</table>

									</div>
									<!-- end widget content -->

								</div>
								<!-- end widget div -->

							</div>
							<!-- end widget -->

						</article>
						<!-- WIDGET END -->
						
					</div>

					<!-- end row -->

					<!-- row -->

					<div class="row">

						<!-- a blank row to get started -->
						<div class="col-sm-12">
							<!-- your contents here -->
						</div>
							
					</div>

					<!-- end row -->

				</section>
				<!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->
				<!-- Ticket Info Modal -->
				<form method ="post" action="/tickets/edit">
				<div class="modal fade" id="TicketInfoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							
								<input type="hidden" id="edit-ticket-id" name="ticketId">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
										&times;
									</button>
									<h4 class="modal-title" id="myModalLabel">Detalle de Ticket</h4>
								</div>
								<div class="modal-body">
									<!--Ticket No. ---<o>--- Titulo del Ticket-->
									<div class="row">
										<div class = "col-md-4">
											<div class="form-group">
												<label for="edit-ticket-number"><small><b>Ticket No.:</b></small></label>
												<input type="text" class="form-control" placeholder="Ticket No." required name="ticketNum" id="edit-ticket-number" disabled align="center"/>
											</div>
										</div>
										<div class = "col-md-8">
											<div class="form-group">
												<label for="edit-ticket-title"><small><b>Título:</b></small></label>
												<input type="text" class="form-control" placeholder="Titulo del Ticket" required name="ticketTitle" id="edit-ticket-title" disabled/>
											</div>
										</div>	
									</div>
									<!--Fecha Inicio ---<o>--- Last Update-->
									<div class="row">
										<div class = "col-md-6">
											<div class="form-group">
												<label for="openningDate"><small><b>Fecha Creación:</b></small></label>
												<input type="text" class="form-control" placeholder="Fecha de Creación" required name="openningDate" id="openningDate" disabled/>
											</div>										
										</div>										
										<div class = "col-md-6">
											<div class="form-group">
												<label for="lastUpdate"><small><b>Ultima Modificación:</b></small></label>
												<input type="text" class="form-control" placeholder="Ultima Modificación" required name="lastUpdate" id="lastUpdate" disabled/>
											</div>
										</div>
									</div>
									<!--Tienda ---<o>--- Ciudad-->
									<div class="row">
										<div class = "col-md-6">
											<div class="form-group">
												<label for="edit-ticket-city"><small><b>Ciudad:</b></small></label>
												<input type="text" class="form-control" placeholder="Ciudad" required name="ticketCity" id="edit-ticket-city" disabled/>
											</div>										
										</div>										
										<div class = "col-md-6">
											<div class="form-group">
												<label for="edit-ticket-store"><small><b>Tienda:</b></small></label>
												<input type="text" class="form-control" placeholder="Tienda" required name="ticketStore" id="edit-ticket-store" disabled/>
											</div>
										</div>
									</div>
									<!--Descripción-->
									<div class = "row">
										<div class="col-md-12">
											<div class="form-group">
												<label for="edit-ticket-description"><small><b>Descripción:</b></small></label>
												<textarea class="form-control" placeholder="Descripción" rows="2" name="ticketDesc" id="edit-ticket-description"></textarea>
											</div>
										</div>
									</div>													
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-default" data-dismiss="modal">
										Cerrar
									</button>
									<button id= "submitModal" type="submit" class="btn btn-primary">
										Editar
									</button>
								</div>
								
						</div><!-- /.modal-content -->
					</div><!-- /.modal-dialog -->
				</div><!-- /.modal -->
				</form>
</div>
<!-- END MAIN PANEL -->