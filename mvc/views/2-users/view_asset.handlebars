<!-- deleteModal -->
<div class="modal fade" id="deleteModal">
    <form action="/assets/deleteImage?assetID={{asset.id}}" method="POST">
    <div class="modal-dialog">
        <div class="modal-content">
            <input type="hidden" id="delete-store-id" name="storeID">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
											&times;
										</button>
                <h4 class="modal-title" id="myModalLabel">Eliminar Imagen</h4>
            </div>
            <div class="modal-body">
                <p> Esta seguro de eliminar esta imagen?<br></p>                 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
				    Cerrar
				</button>
                <button type="submit" class="btn btn-danger">
				    Eliminar
				</button>                                 
            </div>            
        </div>
    </div>
    </form>
</div>

<!-- deleteAssetModal -->
<div class="modal fade" id="deleteAssetModal">
