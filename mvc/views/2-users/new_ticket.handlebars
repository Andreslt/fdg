<!-- MAIN PANEL -->
<div role="main">

	<!-- RIBBON -->
	<div id="ribbon">

		<span class="ribbon-button-alignment"> 
					<span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh"  rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
						<i class="fa fa-refresh"></i>
					</span>
		</span>

		<!-- breadcrumb -->
		<ol class="breadcrumb">
			<li><a href="/home">Inicio</a></li>
			<li><a href="/tickets/{{ticketType}}/list">Tickets</a></li>
			<li>Detalles</li>
		</ol>
		<!-- end breadcrumb -->
		<span class="ribbon-button-alignment pull-right">
					<a href="/tickets/{{ticketType}}/list"><span id="search" class="btn btn-ribbon hidden-xs" data-title="search"><i class="fa fa-lg fa-align-justify"></i> Ver Tickets</span></a>
		</span>
	</div>
	<!-- END RIBBON -->

	<!-- MAIN CONTENT -->
	<div id="content">


		<div class="row">
			<div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
				<h1 class="page-title txt-color-blueDark">

					<!-- PAGE HEADER -->
					<i class="fa-fw fa fa-pencil-square-o"></i> Ticket
					<span>>  
							{{ticketESP ticketType}}
						</span>
				</h1>
			</div>

		</div>

		<!-- widget grid -->
		<section id="widget-grid" class="">

			<!-- START ROW -->

			<div class="row">

				<!-- NEW COL START -->
				<article class="col-sm-12 col-md-12 col-lg-12">

					<!-- Widget ID (each widget will need unique ID)-->
					<div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false">
						<header>
							<span class="widget-icon"> <i class="fa fa-edit"></i> </span>
							<h2>Orden de Trabajo</h2>

						</header>

						<!-- widget div-->
						<div>

							<!-- widget edit box -->
							<div class="jarviswidget-editbox">
								<!-- This area used as dropdown edit box -->

							</div>
							<!-- end widget edit box -->

							<!-- widget content -->
							<div class="widget-body no-padding">

								<form id="order-form" class="smart-form" method="post" action="/tickets/new?ticketNumber={{ticketNumber}}&ticketType={{ticketType}}" enctype="multipart/form-data">
									<header>
										<div class="row">
											<section class="col col-10">
												Detalles Orden de Trabajo
											</section>
										</div>
									</header>

									<fieldset>
										<input type="hidden" id="ticket_id" name="ticket_id" value="{{ticket.id}}">
										<input type="hidden" name="getpriority" value="{{priority}}">
										<div class="row">
											<label class="col-md-1 control-label" style="margin-left: 20px;width: 60px;">Ticket No.:</label>
											<section class="col col-3">
												<label class="input"> <i class="icon-append fa fa-slack"></i>
														<input type="text" id="ticketnumber" name="ticketnumber" placeholder="Numero de Ticket" disabled style="font-size:14px;text-align: center;" value="{{ticketNumber}}">
													</label>
											</section>
											<label class="col-md-1 control-label" style="margin-left: 20px;width: 60px;">Titulo:</label>
											<section class="col col-4">
												<label class="input"> <i class="icon-append fa fa-briefcase"></i>
														<input type="text" id="title" name="title" placeholder="Ingrese o modifique el título del ticket" style="text-align: center;" value="{{ticket.title}}">
													</label>
											</section>
											<label class="col-md-1 control-label" style="margin-left: 10px;width: 60px;">Prioridad:</label>
											<section class="col col-lg-2" style="width: 170px;padding: 0;">
												<label class="select">
													<select name="priority" id="priority" style= "padding-left: 15px;">
														<option value="" selected="" disabled="">Establezca el nivel de prioridad</option>
														<option value="vHigh">MUY ALTA</option>
														<option value="high">ALTA</option>
														<option value="medium">MEDIA</option>
														<option value="low">BAJA</option>   
													</select> <i></i> </label>
											</section>
										</div>
										{{#if_Comp user.userRole 'storeAdmin'}}
										<div class="row">
											<label class="col-md-1 control-label" style="margin-left: 20px;width: 60px;">Ciudad:</label>
											<label class="select col col-4" style="margin-right: 20px;width: 220px;">
											<select name="city" required style="width: 230px; margin-right: 10px;padding-left: 10px;">												
												<option value="0" selected="" disabled="">Seleccionar ciudad</option>
												{{#each cities}}
													<option value="{{id}}">{{city}}</option>
												{{/each}}
											</select> <i></i> </label>
											<label class="col-md-1 control-label" style="margin-left: 40px;width: 65px;">Tienda:</label>
											<label class="select col col-6" style="margin-right: 60px;width: 270px; padding-left: 8px;">
											<select name="store" required style="width: 270px; margin-right: 10px;padding-left: 10px;">
												<option value="0" selected="" disabled="">Seleccionar Tienda</option>
												{{#each stores}}
													<option value="{{id}}">{{storeName}}</option>
												{{/each}}												
											</select> <i></i> </label>

											{{!--<label class="col-md-1 control-label" style="margin-left: 20px;width: 55px;">Activo:</label>
											<section class="col col-lg-2" style="width: 170px;padding: 0;">
												<label class="select">
													<select name="getasset" id="getasset" style= "padding-left: 15px;">
														<option value="0" selected="" disabled="">Seleccionar Activo</option>
														{{#each assets}}
														<option value="{{id}}">{{number}} - {{name}}</option>
														{{/each}}
													</select> <i></i> </label>
											</section>--}}
											
										</div>
										{{/if_Comp}}
										<br>
										<div class="row">
											<label class="col-md-1 control-label" style="margin-left: 20px; margin-top: 10px; width: 60px;">Deadline:</label>
											<section class="col col-3">
												<label class="input"> <i class="icon-append fa fa-calendar"></i>
														<input type="text" name="deadline" id="deadline" placeholder="Fecha máxima para ticket" style="text-align: center;">
													</label>
												<div class="note">
													Por favor escoja la fecha máxima para la realización de este ticket (Opcional).
												</div>
											</section>
										</div>
										<section>
											<label class="col-md-2 control-label">Descripción:</label>
											<label class="textarea"> <i class="icon-append fa fa-comment" style="margin-top: 20px;"></i> 										
													<textarea rows="3" id="description" name="description" required placeholder="Ingrese la descripción del Ticket con el detalle del inconveniente que presenta.">{{ticket.description}}</textarea> 
												</label>
										</section>
										<section class="col col-8">
											<div class="form-group">
												<label>Categorías Mantenimiento (Correctivo):</label>
												<select id="categories" name="categories" multiple style="width:100%" class="select2">
														<optgroup label="Electrico">
															<option value="EL_CO">Cortocircuito</option>
															<option value="EL_OT">Otro problema electrico</option>
														</optgroup>
														<optgroup label="Mecánico">
															<option value="MEC_DO">Doblez</option>
															<option value="MEC_OT">Otro problema mecánico</option>
														</optgroup>
														<optgroup label="Físico">
															<option value="FI_RA">Rayón</option>
															<option value="FI_OT">Otro problema físico</option>
														</optgroup>
														<optgroup label="Térmico">
															<option value="TE_SO">Sobrecalentamiento</option>
															<option value="TE_OT">Otro problema térmico</option>
														</optgroup>
													</select>

												<div class="note">
													<strong>Nota:</strong> seleccionar las categorías consideradas como orígenes del problema.
												</div>
											</div>
										</section>
										<section class="col col-4">
											<label>Adjuntar Imagen (Opcional):</label>
											<div class="input input-file">
												<span class="button"><input id="file2" type="file" name="file2" onchange="this.parentNode.nextSibling.value = this.value">Buscar</span>
												<input type="text" placeholder="Nombre archivo" readonly="">
											</div>
										</section>
									</fieldset>
									<footer>
										<button type="submit" class="btn btn-primary">
												Guardar
											</button>
									</footer>
								</form>

							</div>
							<!-- end widget content -->

						</div>
						<!-- end widget div -->

					</div>
					<!-- end widget -->

				</article>
				<!-- END COL -->
			</div>

			<!-- END ROW -->

		</section>
		<!-- end widget grid -->

	</div>
	<!-- END MAIN CONTENT -->
	<!-- Record Info Modal -->
	<form method="post" action="/admin/newRecord">
		<div class="modal fade" id="recordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-lg">
				<div class="modal-content">
					<input type="hidden" name="ticket_id" value="{{ticket.id}}">
					<input type="hidden" id="edit-record-id" name="recordId">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
											&times;
										</button>
						<h4 class="modal-title" id="myModalLabel">Detalle del Acta Correctiva</h4>
					</div>
					<div class="modal-body">
						<!--Acta No.-->
						<div class="row">
							<div class="col-lg-12" style="padding-left:15px;">
								<div class="col-md-3">
									<div class="form-group">
										<label for="edit-record-number"><small><b>Acta No.:</b></small></label>
										<input style="padding: 5px;" type="text" class="form-control" placeholder="Acta No." required="true" name="recordNum" id="edit-record-number"
											disabled value="{{recordNumber}}" align="center" />
									</div>
								</div>
								<div class="col-md-3">
									<div class="form-group">
										<label for="edit-asset-number"><small><b>Equipo:</b></small></label>
										<input type="text" class="form-control" placeholder="Equipo" name="assetNum" id="edit-asset-number" disabled align="center"
											value="{{ticket.asset_id.number}}" />
									</div>
								</div>
								<div class="col-md-3">
									<label for="edit-adminRepresentative"><small><b>Representante:</b></small></label>
									<input type="text" class="form-control" placeholder="Representante" name="adminRepresentative" id="edit-adminRepresentative"
										disabled value="{{representative.username}} - {{representative.name}} {{representative.lastname}}" align="center"
									/>
								</div>
								<div class="col-md-3">
									<div class="row">
										<label for="edit-custRepresentative"><small style="padding-left: 15px;"><b>Cliente:</b></small></label>
									</div>
									<div class="row">
										<section class="col col-lg-12">
											<label class="select" style="width:260px">
											<select name="custRepresentative" id="custRepresentative" style="display: block; width: 100%; height: 34px; padding: 6px 12px; font-size: 14px;line-height: 1.42857143; color: #555;">
												<option value="0" selected="" disabled="">Seleccionar usuario que atendió visita</option>
												{{#each costumers}}
													<option value="{{_id}}">{{username}} - {{name}} {{lastname}}</option>
												{{/each}}
											</select> <i></i> </label></section>
									</div>
								</div>
							</div>
							<!--Requerimiento del cliente-->
							<div class="col-md-12">
								<div class="form-group">
									<label for="openningDate"><small><b>Requerimiento del cliente:</b></small></label>
									<textarea class="form-control" name="customerReq" placeholder="Ingrese el requerimiento del cliente" rows="1"></textarea>
								</div>
							</div>
							<!--Situación Encontrada-->
							<div class="col-md-12">
								<div class="form-group">
									<label for="openningDate"><small><b>Situación Encontrada:</b></small></label>
									<textarea class="form-control" name="currentState" placeholder="Ingrese la situación encontrada" rows="3"></textarea>
								</div>
							</div>
							<!--Acciones Correctivas-->
							<div class="col-md-12">
								<div class="form-group">
									<label for="openningDate"><small><b>Acciones Correctivas:</b></small></label>
									<textarea class="form-control" name="correctiveActions" placeholder="Ingrese las acciones correctivas" rows="2"></textarea>
								</div>
							</div>
							<!--Sugerencias-->
							<div class="col-md-12">
								<div class="form-group">
									<label for="openningDate"><small><b>Sugerencias:</b></small></label>
									<textarea class="form-control" name="suggestions" placeholder="Ingrese las sugerencias" rows="3"></textarea>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">
											Cerrar
										</button>
						<button id="submitModal" type="submit" class="btn btn-primary">
											Guardar
										</button>
					</div>

				</div>
				<!-- /.modal-content -->
			</div>
			<!-- /.modal-dialog -->
		</div>
		<!-- /.modal -->
	</form>

	<form action="/tickets/ticket_delete" method="POST">
		<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-sm">
				<div class="modal-content">
					<input type="hidden" name="delete_ticket_id" value="{{ticket.id}}">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
											&times;
										</button>
						<h4 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h4>
					</div>
					<div class="modal-body">
						<div>
							<p>Al eliminar este ticket también eliminará todas las actas e historial del mismo.<br><br> ¿Desea continuar?
							</p>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">
											Cancelar
										</button>
						<button id="submitModal" type="submit" class="btn btn-danger">
											Eliminar
										</button>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
<!-- END MAIN PANEL -->