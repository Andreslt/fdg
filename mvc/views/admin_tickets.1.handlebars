				<!-- Ticket Info Modal -->
				<div class="modal fade" id="TicketInfoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<form method ="post" action="admin/tickets/edit">
							<input type="hidden" id="edit-ticket-id" name="id">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
									&times;
								</button>
								<h4 class="modal-title" id="myModalLabel">Detalle de Ticket</h4>
							</div>
							<div class="modal-body">
								<!--Ticket No. ---<o>--- Titulo del Ticket-->
								<div class="row">
									<div class = "col-md-4">
										<div class="form-group">
											<input type="text" class="form-control" placeholder="Ticket No." required name="ticketTitle" id="edit-ticket-title"/>
										</div>
									</div>
									<div class = "col-md-8">
										<div class="form-group">
											<input type="text" class="form-control" placeholder="Titulo del Ticket" required name="ticketTitle" id="edit-ticket-title"/>
										</div>
									</div>									
								</div>
								<!--Descripción-->
								<div class = "row">
									<div class="col-md-12">
										<div class="form-group">
											<textarea class="form-control" placeholder="Descripción" rows="2" name="ticketDescription" id="edit-ticket-description"></textarea>
										</div>
									</div>
								</div>
								<!--Tienda ---<o>--- Ciudad-->
								<div class="row">
									<div class = "col-md-6">
										<div class="form-group">
											<input type="text" class="form-control" placeholder="Tienda" required name="ticketStore" id="edit-ticket-store"/>
										</div>
										<!--<label for="store"> Tienda</label>
											<select class="form-control" id="store">
												{{#each store}}
													<option>{{store.storeName}}</option>
												{{/each}}
											</select>										-->
									</div>
									<div class = "col-md-6">
										<div class="form-group">
											<input type="text" class="form-control" placeholder="Ciudad" required name="ticketCity" id="edit-ticket-city"/>
										</div>										
									</div>
								</div>

								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<label for="category"> Category</label>
											<select class="form-control" id="category">
												<option>Articles</option>
												<option>Tutorials</option>
												<option>Freebies</option>
											</select>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="tags"> Tags</label>
											<input type="text" class="form-control" id="tags" placeholder="Tags" />
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-12">
										<div class="well well-sm well-primary">
											<form class="form form-inline " role="form">
												<div class="form-group">
													<input type="text" class="form-control" value="" placeholder="Date" required />
												</div>
												<div class="form-group">
