    <!-- Record Info Modal -->
    <form method="post" action="/admin/newRecord">
        <div class="modal fade" id="recordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <input type="hidden" name="ticket_id" value="{{ticket.id}}">
                    <input type="hidden" id="edit-record-id" name="recordId">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
											&times;
										</button>
                        <h4 class="modal-title" id="myModalLabel">Detalle del Acta</h4>
                    </div>
                    <div class="modal-body">
                        <!--Acta No.-->
                        <div class="row">
                            <div class="col-lg-12" style="padding-left:15px;">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="edit-record-number"><small><b>Acta No.:</b></small></label>
                                        <input style="font-size:12px; padding: 5px; width: 120px;" type="text" class="form-control" placeholder="Acta No." required="true"
                                            name="recordNum" id="edit-record-number" disabled value="{{recordNumber}}" align="center"
                                        />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="edit-asset-number"><small><b>No. Equipo:</b></small></label>
                                        <input type="text" class="form-control" placeholder="No. Equipo" name="assetNum" id="edit-asset-number" disabled align="center"
                                        />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label for="edit-adminRepresentative"><small><b>Representante:</b></small></label>
                                    <input type="text" class="form-control" placeholder="Representante" name="adminRepresentative" id="edit-adminRepresentative"
                                        disabled value="{{representative.username}} - {{representative.name}} {{representative.lastname}}"
                                        align="center" />
                                </div>
                                <div class="col-md-4">
                                    <div class="row">
                                        <label for="edit-custRepresentative"><small style="padding-left: 15px;"><b>Cliente:</b></small></label>
                                    </div>
                                    <div class="row">
                                        <section class="col col-lg-12">
                                            <label class="select" style="width:260px">
											<select name="custRepresentative" id="custRepresentative" style="display: block; width: 100%; height: 34px; padding: 6px 12px; font-size: 14px;line-height: 1.42857143; color: #555;">
												<option value="0" selected="" disabled="">Seleccionar usuario que atendi贸 visita</option>
												{{#each costumers}}
													<option value="{{_id}}">{{username}} - {{name}} {{lastname}}</option>
												{{/each}}
											</select> <i></i> </label></section>
                                    </div>
                                </div>
                            </div>
                            <!--Requerimiento del cliente-->
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="openningDate"><small><b>Requerimiento del cliente:</b></small></label>
