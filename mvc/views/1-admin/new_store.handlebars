<!-- MAIN PANEL -->
<div role="main">

	<!-- RIBBON -->
	<div id="ribbon">

		<span class="ribbon-button-alignment"> 
					<span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh"  rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
						<i class="fa fa-refresh"></i>
					</span>
		</span>

		<!-- breadcrumb -->
		<ol class="breadcrumb">
			<li><a href="/dashboard">Inicio</a></li>
			<li><a href="/stores">Ver tiendas</a></li>
			<li>Crear Tienda</li>
		</ol>
		<!-- end breadcrumb -->
		<span class="ribbon-button-alignment pull-right">
                    <a href="/stores"><span id="search" class="btn btn-ribbon hidden-xs" data-title="search"><i class="fa fa-lg fa-plus-square-o"></i> Ver Tiendas</span></a>
		</span>
		<!-- You can also add more buttons to the
				ribbon for further usability

				Example below:

				<span class="ribbon-button-alignment pull-right">
				<span id="search" class="btn btn-ribbon hidden-xs" data-title="search"><i class="fa-grid"></i> Change Grid</span>
				<span id="add" class="btn btn-ribbon hidden-xs" data-title="add"><i class="fa-plus"></i> Add</span>
				<span id="search" class="btn btn-ribbon" data-title="search"><i class="fa-search"></i> <span class="hidden-mobile">Search</span></span>
				</span> -->

	</div>
	<!-- END RIBBON -->

	<!-- MAIN CONTENT -->
	<div id="content">

		<div class="row">
			<div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
				<h1 class="page-title txt-color-blueDark">
					<i class="fa fa-table fa-fw "></i> Tienda
					<span>> 
                                Crear Nueva
							</span>
				</h1>
			</div>
		</div>
		<!-- Widget ID (each widget will need unique ID)-->
		<div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false">

			<header>
				<span class="widget-icon"> <i class="fa fa-edit"></i> </span>
				<h2>Detalles de Tienda</h2>

			</header>

			<!-- widget div-->
			<div>

				<!-- widget edit box -->
				<div class="jarviswidget-editbox">
					<!-- This area used as dropdown edit box -->

				</div>
				<!-- end widget edit box -->

				<!-- widget content -->
				<div class="widget-body no-padding">

					<form id="order-form" class="smart-form" method="POST" action="/stores/new">
						<header style="height: 30px;">
							Información básica de Tienda
						</header>

						<fieldset>
							<input type="hidden" name="storeID" value="{{store.id}}">
							<div class="row">
								<section class="col col-6">
									<label for="name">Nombre</label>
									<label class="input"> <i class="icon-append fa fa-institution"></i>                                                        
														<input type="text" name="storeName" required placeholder="Ingrese el nombre de la tienda">
													</label>
								</section>
								<section class="col col-6">
									<label for="name">Ciudad</label>
									<label class="select">
														<select name="city_id" required id="store_city_new">
															<option value="0" selected="" disabled="">Seleccione la ciudad de la tienda</option>
                                                            {{#each cities}}
                                                                <option value="{{id}}">{{city}}</option>
                                                            {{/each}}
														</select> <i></i> </label>
								</section>
							</div>

							<div class="row">
								<section class="col col-6">
									<label for="name">Correo Electrónico</label>
									<label class="input"> <i class="icon-append fa fa-envelope-o"></i>
														<input type="email" name="email" required placeholder="Ingrese el correo electrónico de la tienda">
													</label>
								</section>
								<section class="col col-6">
									<label for="name">Teléfono</label>
									<label class="input"> <i class="icon-append fa fa-phone"></i>
														<input type="tel" name="phoneNew" data-mask="(999) 999-9999" placeholder="Ingrese el teléfono de la tienda">
													</label>
								</section>
							</div>

							<div class="row">
								<section class="col col-6">
									<label for="address">Dirección</label>
									<label class="input"> <i class="icon-append fa fa-exchange"></i>
														<input type="address" name="address" required placeholder="Ingrese la dirección de la tienda">
													</label>
								</section>
								<section class="col col-6">
									<label for="company_id">Compañía</label>
									<label class="select">
									<select name="company_id" required id="store_company">
										<option value="0" selected="" disabled="">Seleccione la compañía a la cual pertenece la tienda</option>
                                            {{#each companies}}
                                               <option value="{{id}}">{{companyName}}</option>
                                             {{/each}}
									</select> <i></i> </label>
								</section>
							</div>
						</fieldset>
						<footer>
							<button type="submit" class="btn btn-primary">
									    Guardar
							</button>						
							<a href="/stores"><span class="btn btn-default">
                                        Cancelar
                            </span></a>
						</footer>
					</form>

				</div>
				<!-- end widget content -->

			</div>
			<!-- end widget div -->

		</div>
		<!-- end widget -->
	</div>
	<!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->